{
  "diagnostic.errorSign": "×",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "•",
  "diagnostic.messageTarget": "echo",
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextPrefix": " ❯❯ ",
  "diagnostic.enableMessage": "always",
  "diagnostic.messageDelay": 0,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.showUnused": true,
  "diagnostic.virtualTextCurrentLineOnly": true,

  "coc.preferences.rootPatterns": [".vim",".git/",".svn/",".hg",".projections.json"],
  "coc.preferences.enableMarkdown": true,
  "coc.preferences.enableFloatHighlight": false,
  "coc.preferences.useQuickfixForLocations": false,
  "coc.preferences.jumpCommand": "edit",
  "coc.preferences.colorSupport": true,
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.formatOnType": false,
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.semanticTokensHighlights": true,

  "suggest.timeout": 2000,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.localityBonus": true,
  "suggest.enablePreview": true,
  "suggest.snippetIndicator": " ★",
  "suggest.enablePreselect": false,
  "suggest.fixInsertedWord": true,
  "suggest.autoTrigger": "trigger",
  "suggest.detailField": "preview",
  "suggest.floatEnable": true,
  "suggest.echodocSupport": true,
  "suggest.numberSelect": true,
  "suggest.removeDuplicateItems": true,

  "codeLens.enable": true,

  "python.jediEnabled": true,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8CategorySeverity.F": "Warning",
  "python.linting.flake8CategorySeverity.E": "Warning",
  "python.linting.mypyEnabled": true,
  "python.analysis.diagnosticEnabled": true,
  "python.analysis.openFilesOnly": false,
  "python.formatting.provider": "autopep8",
  "python.linting.pydocstyleEnabled": true,
  "python.venvPath": "~/.virtualenvs",

  "signature.enable": true,
  "signature.target": "float",
  "signature.triggerSignatureWait": 300,
  "signature.preferShownAbove": true,

  "intelephense.enable": true,
  "intelephense.telemetry.enabled": false,
  "intelephense.progress.enable": false,
  "intelephense.rename.namespaceMode": "single",
  "intelephense.environment.shortOpenTag": false,
  "intelephense.diagnostics.enable": false,
  "intelephense.completion.insertUseDeclaration": true,
  "intelephense.completion.triggerParameterHints": true,
  "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,
  "intelephense.compatibility.correctForArrayAccessArrayAndTraversableArrayUnionTypes": true,
  "intelephense.phpdoc.returnVoid": true,
  "intelephense.environment.phpVersion": "8.1.0",

  "diagnostic-languageserver.debug": true,
  "diagnostic-languageserver.trace.server": "verbose",

  "diagnostic-languageserver.linters": {
    "typoscript-lint": {
        "command": "typoscript-lint",
        "debounce": 100,
        "args": ["--format=gcc", "%file"],
        "offsetLine": 0,
        "offsetColumn": 0,
        "sourceName": "typoscript-lint",
        "formatLines": 1,
        "formatPattern": [
            "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
              {
                "line": 1,
                "column": 2,
                "message": 4,
                "security": 3
              }
        ],
        "securities": {
          "error": "error",
          "warning": "warning",
          "info": "info"
        }
    }
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "typoscript": "typoscript-lint"
  }
}
