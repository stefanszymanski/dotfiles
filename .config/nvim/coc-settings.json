{
  "diagnostic.signOffset": 3000,
  "diagnostic.errorSign": "×",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "•",
  "diagnostic.messageTarget": "echo",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " ❯❯ ",

  "coc.preferences.useQuickfixForLocations": true,

  "coc.preferences.triggerAfterInsertEnter": true,
  "coc.preferences.hyphenAsKeyword": true,

  "coc.preferences.timeout": 2000,
  "coc.preferences.acceptSuggestionOnCommitCharacter": true,

  "coc.preferences.snippetIndicator": " ★",

  "coc.preferences.hoverTarget": "float",
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.echodocSupport": true,

  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "javascript",
    "json",
    "less",
    "markdown",
    "python",
    "reason",
    "typescript",
    "typescript.tsx",
    "yaml",
	"lua",
    "php",
    "vim"
  ],


  "python.jediEnabled": true,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8CategorySeverity.F": "Warning",
  "python.linting.flake8CategorySeverity.E": "Warning",
  "python.linting.mypyEnabled": true,
  "python.analysis.diagnosticEnabled": true,
  "python.analysis.openFilesOnly": false,
  "python.formatting.provider": "autopep8",
  "python.linting.pydocstyleEnabled": true,

  "suggest.floatEnable": true,
  "suggest.echodocSupport": true,

  "coc.preferences.triggerSignatureHelp": true,
  "signature.enable": true,
  "signature.target": "echo",
  "signature.triggerSignatureWait": 300,
  
  "languageserver": {
	"lua": {
      "command": "java",
      "args": ["-cp", ".languageserver/EmmyLua-LanguageServer/EmmyLua-LS/build/libs/EmmyLua-LS-all.jar", "com.tang.vscode.MainKt"],
	  "cwd": "~",
      "filetypes": ["lua"],
      "rootPatterns": [".git/"]
	},
	"php": {
	  "command": "intelephense",
	  "args": ["--stdio"],
	  "filetypes": ["php"],
	  "initializationOptions": {
	    "storagePath": "/tmp/intelephense",
        "clearCache": false
	  },
	  "rootPatterns": [".git", ".svn"],
      "settings": {
          "intelephense": {
              "files": {
                "exclude": ["_tmp"]
              }
          }
      }
	},
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"]
    }
  }
}
