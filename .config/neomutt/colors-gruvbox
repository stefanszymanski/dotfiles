# Copied from https://github.com/sheoak/neomutt-powerline-nerdfonts/blob/master/colors/gruvbox-powerline.neomuttrc

# cancel theme colors
color index color223 black ~Q                                # replied to
color index color223 black ~P                                # from me
color index color223 black ~T                                # tagged
color index color223 black ~O                                # old
color index color223 black ~F                                # flagged
color index color223 black ~N                                # new

# add some nice custom coloring to the message list
# thanks to new neomutt features
# http://www.mutt.org/doc/manual/#patterns
# https://neomutt.org/feature/index-color
color index_subject color109 black "~P !~T !~D"              # from me, not tagged nor deleted
color index_author color109 black "~P !~T !~D"
color index_subject color243 black "~Q !~T !~D"              # replied to, not tagged nor deleted
color index_author color243 black "~Q !~T !~D"
color index_subject brightcolor142 black "~N !~T !~D"        # new, not tagged nor deleted
color index_author  brightcolor142 black "~N !~T !~D"
color index_subject color142 black "~O !~T !~D"              # old, not tagged nor deleted
color index_author color142 black "~O !~T !~D"
color index_subject color214 black "~F !~T !~D"              # flagged, not tagged nor deleted
color index_author color214 black "~F !~T !~D"
color index_subject brightcolor214 black "~F ~N !~T !~D"     # flagged and new, not tagged nor deleted
color index_author  brightcolor214 black "~F ~N !~T !~D"
color index_subject color167 black "~= !~T !~D"              # duplicated, not tagged nor deleted
color index_author color167 black "~= !~T !~D"
color index_subject brightcolor109 black "~P ~N !~T !~D"     # from me and new, not tagged nor deleted
color index_author brightcolor109 black "~P ~N !~T !~D"
color index black color223 "~T"                              # tagged
color index color229 color124 "~D"                              # deleted
