##############
### Posteo ###
##############

account posteo
host posteo.de
port 465
protocol smtp

user stefan.szymanski@posteo.de
from stefan.szymanski@posteo.de

auth on
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.private/passwords/posteo-password.gpg"

tls on
tls_starttls off
tls_trust_file /etc/ssl/certs/ca-certificates.crt

