#!/usr/bin/env bash

PANEL_FIFO=/tmp/panel-fifo
PANEL_HEIGHT=18
PANEL_FONT="-*-fixed-*-*-*-*-13-*-*-*-*-*-*-*"
PANEL_FONT="monospace:size=10:weight=bold"
PANEL_WM_NAME=bspwm_panel

if xdo id -a "$PANEL_WM_NAME" > /dev/null ; then
	printf "%s\n" "The panel is already running." >&2
	exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT


# clock -sf 'S%a %H:%M' > "$PANEL_FIFO" &
# bspc subscribe report > "$PANEL_FIFO" &

. ~/.panel-colors


o=12
# determine detected monitors with their dimensions and positions
IFS=$'\n' read -d "" -ra monitors <<< "$(xrandr --current | awk '$2 ~ /connected/ && /[0-9]+x[0-9]+/ {print $1, $3}')"
for monitor in "${monitors[@]}"; do
    # split string into required values
    IFS=$' ' read -d "" -ra values <<< "$(awk -F'[ x+]' '{print $1, $2, $3, $4, $5}' <<< "$monitor")"
    name=${values[0]}
    w=${values[1]}
    x=${values[3]}
    y=${values[4]}

    # calculate panel dimension and position
    ((w=w-(o*2)))
    ((x=x+o))
    ((y=y+(o/2)))
    h="$PANEL_HEIGHT"
    geometry="${w}x${h}+${x}+${y}"

    # prepare FIFO file for raw panel data
    panel_fifo="${PANEL_FIFO}_${name}"
    [ -e "$panel_fifo" ] && rm "$panel_fifo"
    mkfifo "$panel_fifo"

    # start writing data to FIFO file
    # xtitle -sf 'T%s\n' > "$panel_fifo" &
    bspc subscribe report > "$panel_fifo" &
    watch -t "cat /proc/loadavg | awk '{printf \"L%s %s %s\n\", \$1, \$2, \$3}' > $panel_fifo" &
    watch -n1 -t "date | awk '{printf \"T%s\n\", \$0}' > $panel_fifo" &

    # create panel
    panel_wm_name="${PANEL_WM_NAME}_${name}"
    panel-bar "$name" < "$panel_fifo" | lemonbar -a 32 -u 2 \
        -n "$panel_wm_name" \
        -g "$geometry" \
        -f "$PANEL_FONT" \
        -o "1" \
        -F "$COLOR_DEFAULT_FG" \
        -B "$COLOR_DEFAULT_BG" | sh &

    # place panel above root window
    winid=$(xdo id -m -a "${panel_wm_name}")
    rootid=$(xdo id -N Bspwm -n root | sort | head -n 1)
    xdo above -t "$rootid" "$winid"
done


wait
