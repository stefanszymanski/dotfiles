#!/usr/bin/env bash

# Copied from https://github.com/alfunx/.dotfiles/blob/master/.bin/rofi-session

choice_by_rofi() {
    output=(
        '0: Lock'
        '1: Hibernate'
        '2: Suspend'
        '3: Logout'
        '4: Reboot'
        '5: Poweroff'
        '6: Disable Screensaver'
        '7: Enable Screensaver'
        '8: Disable Autolock'
        '9: Enable Autolock'
    )

    choice=$(printf '%s\n' "${output[@]}" \
        | rofi -i -lines 10 -dmenu -p 'session' \
        | cut -d ':' -f 1)
}

[[ -z "$DISPLAY" ]] && exit 1

choice_by_rofi

[[ -z "$choice" ]] && exit 1

case "$choice" in
    0) xautolock -locknow & ;;
    1) systemctl hibernate & ;;
    2) systemctl suspend & ;;
    3) systemctl kill "$(pgrep X)" & ;;
    4) systemctl reboot & ;;
    5) systemctl poweroff & ;;
    6) xset s off & ;;
    7) xset s on & ;;
    8) xautolock -disable & ;;
    9) xautolock -enable & ;;
esac
